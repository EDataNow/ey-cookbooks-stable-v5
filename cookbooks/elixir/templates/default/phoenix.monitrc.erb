check process phoenix
  with pidfile /var/run/engineyard/<%= @app %>.pid
  group phoenix
  start program = "/bin/bash -c '/data/<%= @app %>/current/rel/<%= @app %>/bin/<%= @app %> start'"
    as uid <%= @user %> and gid <%= @user %>
 stop program = "/bin/bash -c '/data/<%= @app %>/current/rel/<%= @app %>/bin/<%= @app %> stop'"
    as uid <%= @user %> and gid <%= @user %>
