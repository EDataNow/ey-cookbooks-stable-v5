ETCD_NAME=etcd0

# Path to the data directory.
ETCD_DATA_DIR=/data/etcd/etcd0.etcd

ETCD_OPTS="-advertise-client-urls http://<%= @host_ip %>:2379,http://<%= @host_ip %>:4001  -listen-client-urls http://0.0.0.0:2379,http://0.0.0.0:4001  -initial-advertise-peer-urls http://<%= @host_ip %>:2380  -listen-peer-urls http://0.0.0.0:2380  -initial-cluster-token etcd-cluster-1 -initial-cluster etcd0=http://<%= @host_ip %>:2380  -initial-cluster-state new"
